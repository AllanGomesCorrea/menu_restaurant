{
  "name": "casa-do-porco-clone",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Clone educacional do site A Casa do Porco usando React 18, TypeScript, Tailwind CSS e Framer Motion",
  "author": "Projeto Educacional",
  "scripts": {
    "dev": "vite",
    "dev:all": "bash scripts/start-dev.sh",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:admin": "cd admin && npm run dev",
    "stop": "bash scripts/stop-dev.sh",
    "start:prod": "bash scripts/start-prod.sh",
    "build": "tsc -b && vite build",
    "build:all": "npm run build && cd admin && npm run build",
    "build:optimized": "tsc -b && vite build --config vite.config.optimized.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:studio": "cd backend && npx prisma studio"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^7.2.7"
  }
}
